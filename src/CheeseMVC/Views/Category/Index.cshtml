@model List<CheeseMVC.Models.CheeseCategory>

@{
    ViewData["Title"] = "Category";
}

<h2>Category</h2>

<ul>
    @foreach (var category in Model)
    {
        <li>@category.Name</li>
    }
</ul>

@if (Model.Count == 0)
{
    <p>No categories yet!</p>
}

<p><a asp-controller="Category" asp-action="Add">Add A Category</a></p>